{
    "manifest_version": 3,
    "name": "Winddown Guardian",
    "version": "1.0",
    "description": "Blocks all sites except SleepWell web application and selected pages",
    "permissions": [
        "tabs",
        "webNavigation",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "../public/popup.html",
        "default_icon": {
            "32": "public/icons/baby-sleep.png"
        }
    },
    "icons": {
        "32": "public/icons/baby-sleep.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://localhost:44223/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ]
}