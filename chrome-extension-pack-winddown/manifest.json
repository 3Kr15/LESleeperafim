{
    "manifest_version": 3,
    "name": "Winddown Guardian",
    "version": "1.0",
    "description": "Blocks all sites except LESleeperafim web application",
    "permissions": [
        "tabs",
        "webNavigation",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "../public/popup.html"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}